<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.View.PrimeraPaginaView">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="NumeroA"  Placeholder="Número A" FontSize="25" Keyboard="Numeric" HorizontalOptions="Center"/>
                <Label x:Name="SignoLabel"  Text="+" FontSize="25" VerticalTextAlignment="Center"/>
                <Entry x:Name="NumeroB" Placeholder="Número B" FontSize="25" Keyboard="Numeric" HorizontalOptions="Center"/>
                <Label Text="=" VerticalOptions="Center" FontSize="25"/>
                <Label x:Name="ResultadoLabel" Text="" VerticalTextAlignment="Center" FontSize="30" />
            </StackLayout>
            <StackLayout>
                <Button x:Name="ButtonSumar" Text="Sumar"  Clicked="ButtonSumar_Clicked" />
                <Button x:Name="ButtonRestar" Text="Restar" Clicked="ButtonRestar_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>